package com.utils{	import com.greensock.TweenMax;	import com.greensock.easing.*;		import flash.display.*;	import flash.filters.*;		public class FX extends MovieClip{		public function FX() {			// trace("I am the FX");			// constructor code		}		public function initFX():void{					}				public function rollOverFx(theObject:Object):void{			theObject.gotoAndStop(2);			// TweenMax.to(theObject, .25, {glowFilter:{color:0x706fb1, alpha:1, blurX:5, blurY:5, strength:5}});		}		public function rollOutFx(theObject:Object):void{			theObject.gotoAndStop(1);			// TweenMax.to(theObject, .15, {glowFilter:{color:0x706fb1, alpha:0, blurX:0, blurY:0}});					}		public function doPower(theObject:Object):void{			TweenMax.to(theObject, 0, {glowFilter:{color:0xffff00, alpha:1, blurX:10, blurY:10, strength:3}, onComplete:removeGlow});			function removeGlow():void{				TweenMax.to(theObject, .25, {glowFilter:{color:0xff0000, alpha:0, blurX:0, blurY:0}});							}		}		public function doShake(theObject:Object):void{						var theInitPos:Number = theObject.x;			TweenMax.to(theObject, 0, {glowFilter:{color:0xff0000, alpha:1, blurX:10, blurY:10, strength:3}});			TweenMax.to(theObject, .05, {x:theObject.x -15, onComplete:moveRight});			function moveRight():void{				TweenMax.to(theObject, .05, {x:theObject.x +15, onComplete:moveLeft});			}			function moveLeft():void{				TweenMax.to(theObject, .05, {x:theObject.x -5, onComplete:resetPos});			}			function resetPos():void{				TweenMax.to(theObject, .25, {x:theInitPos, ease:Sine.easeIn});				TweenMax.to(theObject, .15, {glowFilter:{color:0xff0000, alpha:0, blurX:0, blurY:0}});			}					}				}	}